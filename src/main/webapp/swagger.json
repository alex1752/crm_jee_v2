   "components": {
      "schemas": {
         "Client": {
            "type": "object",
            "required": [
               "nom",
               "prenom",
               "email"
            ],
            "properties": {
               "nom": {
                  "type": "string",
                  "minLength": 1
               },
               "prenom": {
                  "type": "string",
                  "minLength": 2
               },
               "entreprise": {
                  "type": "string",
                  "minLength": 1
               },
               "email": {
                  "type": "string",
                  "format": "email",
                  "pattern": "(^[A-Za-z0-9._%-]+@[A-Za-z0-9.-]+[.][A-Za-z]+$)"
               },
               "telephone": {
                  "type": "string",
                  "format": "tel",
                  "pattern": "^0[1-9][0-9]{8}$"
               },
               "mobile": {
                  "type": "string",
                  "format": "tel",
                  "pattern": "^0[1-9][0-9]{8}$"
               },
               "actif": {
                  "type": "boolean",
                  "default": true
               },
               "notes": {
                  "type": "string",
                  "minLength": 1
               }
            }
         },
         "ClientNoReq": {
            "type": "object",
            "required": [
               "id"
            ],
            "properties": {
               "id": {
                  "type": "integer"
               },
               "nom": {
                  "type": "string",
                  "minLength": 1
               },
               "prenom": {
                  "type": "string",
                  "minLength": 2
               },
               "entreprise": {
                  "type": "string",
                  "minLength": 1
               },
               "email": {
                  "type": "string",
                  "format": "email",
                  "pattern": "(^[A-Za-z0-9._%-]+@[A-Za-z0-9.-]+[.][A-Za-z]+$)"
               },
               "telephone": {
                  "type": "string",
                  "format": "tel",
                  "pattern": "^0[1-9][0-9]{8}$"
               },
               "mobile": {
                  "type": "string",
                  "format": "tel",
                  "pattern": "^0[1-9][0-9]{8}$"
               },
               "actif": {
                  "type": "boolean",
                  "default": true
               },
               "notes": {
                  "type": "string",
                  "minLength": 1
               }
            }
         },
         "Commande": {
            "type": "object",
            "properties": {
               "label": {
                  "type": "string",
                  "minLength": 1
               },
               "tjmht": {
                  "type": "number",
                  "pattern": "^[1-9]\\d*((\\.|,)\\d{1,2})?$"
               },
               "dureeJours": {
                  "type": "integer",
                  "pattern": "^[1-9]\\d*$"
               },
               "tva": {
                  "type": "number",
                  "pattern": "^([1-9]\\d?)((\\.|,)\\d{1,2})?$|^100((\\.|,)00?)?$|0((\\.|,)\\d{1,2})?$"
               },
               "statut": {
                  "type": "string",
                  "enum": [
                     "CONFIRME",
                     "ANNULE",
                     "OPTION"
                  ]
               },
               "typeCommande": {
                  "type": "string",
                  "enum": [
                     "Formation",
                     "Prestation"
                  ]
               },
               "idClient": {
                  "type": "integer"
               },
               "notes": {
                  "type": "string",
                  "minLength": 1
               }
            }
         },
         "CommandeNoReq": {
            "type": "object",
            "required": [
               "id"
            ],
            "properties": {
               "id": {
                  "type": "integer"
               },
               "label": {
                  "type": "string",
                  "minLength": 1
               },
               "tjmht": {
                  "type": "number",
                  "pattern": "^[1-9]\\d*((\\.|,)\\d{1,2})?$"
               },
               "dureeJours": {
                  "type": "integer",
                  "pattern": "^[1-9]\\d*$"
               },
               "tva": {
                  "type": "number",
                  "pattern": "^([1-9]\\d?)((\\.|,)\\d{1,2})?$|^100((\\.|,)00?)?$|0((\\.|,)\\d{1,2})?$"
               },
               "statut": {
                  "type": "string",
                  "enum": [
                     "CONFIRME",
                     "ANNULE",
                     "OPTION"
                  ]
               },
               "typeCommande": {
                  "type": "string",
                  "enum": [
                     "Formation",
                     "Prestation"
                  ]
               },
               "idClient": {
                  "type": "integer"
               },
               "notes": {
                  "type": "string",
                  "minLength": 1
               }
            }
         },
         "Utilisateur": {
            "type": "object",
            "required": [
               "login",
               "motDePasse",
               "email"
            ],
            "properties": {
               "login": {
                  "type": "string",
                  "minLength": 1
               },
               "email": {
                  "type": "string",
                  "format": "email",
                  "pattern": "(^[A-Za-z0-9._%-]+@[A-Za-z0-9.-]+[.][A-Za-z]+$)"
               },
               "motDePasse": {
                  "type": "string",
                  "pattern": "(^[A-Za-zÀ-ÿ\\d]$|^[A-Za-zÀ-ÿ\\d][A-Za-zÀ-ÿ\\d\\-']*[A-Za-zÀ-ÿ\\d]$)"
               }
            }
         },
         "Error": {
            "type": "object",
            "required": [
               "code",
               "message"
            ],
            "properties": {
               "code": {
                  "type": "integer",
                  "format": "int32"
               },
               "message": {
                  "type": "string"
               }
            }
         }
      },
      "securitySchemes": {
         "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
         }
